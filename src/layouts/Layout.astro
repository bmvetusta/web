---
import '@assets/styles/global.css';
import SpeedInsights from '@vercel/speed-insights/astro';

// const ogImageResource = await import('@assets/images/abonate2425.png').then((mod) => mod.default);
const ogImageResource = { src: '/apple-touch-icon.png', width: 512, height: 512 };

interface Props {
  title?: string;
  description?: string;
  twitterDescription?: string;
  type?: 'website' | 'article';
  ogImage?: ImageMetadata;
  ogImageAlt?: string;
  canonicalUrl?: string;
}
const defaultDescription = `Web del Club Balonmano Vetusta (de Oviedo, Asturias). Somos de Oviedo, tenemos escuelas de balonmano base y disputamos la liga de Primera Nacional de Espa√±a encuadrado en el grupo B. Tambi√©n tenemos escuelas en distintos colegios de Oviedo y disputamos la liga Territorial senior masculino de Asturias. tambi√©n conocido como Auto-Center Principado Vetusta por motivos de patrocinio.`;
const defaultTwitterDescription = `Web del Club Balonmano Vetusta, de Oviedo, Asturias. Tenemos escuelas de balonmano base y jugamos en Primera Nacional con nuestro primer equipo. Tambi√©n conocido como Auto-Center Principado Vetusta por motivos de patrocinio.`;

const canonicalUrl = Astro.url.href;
const title =
  Astro.props.title ?? `Club Balonmano Vetusta (Oviedo) ü§æ‚Äç‚ôÇÔ∏è - Primera Nacional - Asturias`;
const description = Astro.props.description ?? defaultDescription;
const twitterDescription =
  Astro.props.twitterDescription ?? Astro.props.description ?? defaultTwitterDescription;
const type = Astro.props.type ?? 'website';

const ogImage = new URL(Astro.props.ogImage?.src ?? ogImageResource.src, Astro.site!.href);

const { width: ogWidth, height: ogHeight } = Astro.props.ogImage ?? ogImageResource;
const ogImageAlt =
  Astro.props.ogImageAlt ??
  'Club Balonmano Vetusta. Abonate y ven a disfrutar del balonmano de Primera Nacional con nosotros.';
---

<html lang='es'>
  <head>
    <meta charset='utf-8' />
    <title>{title}</title>

    <meta name='description' content={description} />

    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />

    <meta property='twitter:title' content={title} />
    <meta property='twitter:description' content={twitterDescription} />

    <meta property='og:url' content={canonicalUrl} />
    <meta property='og:type' content='website' />
    <meta
      property='og:site_name'
      content='Club Balonmano Vetusta, club de la ciudad de Oviedo. Tambi√©n conocido como Auto-Center Principado Vetusta por motivos de patrocinio.'
    />
    <meta property='og:image:alt' content={ogImageAlt} />
    <meta property='og:image:locale' content='es-ES' />
    <meta property={`og:image`} content={ogImage.href} />
    <meta property={`og:image:type`} content={type} />
    <meta property={`og:image:width`} content={ogWidth.toString()} />
    <meta property={`og:image:height`} content={ogHeight.toString()} />

    <link rel='image_src' href={ogImage.href} />

    <meta name='viewport' content='width=device-width, initial-scale=1' />

    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <link rel='mask-icon' href='/favicon.ico' color='#151111' />
    <meta name='theme-color' content='#151111' />

    <meta name='generator' content={Astro.generator} />
    <link href='/assets/fonts/alumni/font.css' rel='stylesheet' />

    <SpeedInsights />
    <slot name='head' />
  </head>
  <body>
    <slot />
  </body>
</html>
