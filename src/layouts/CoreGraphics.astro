<html lang='es'>
  <head>
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link href='/assets/fonts/digital7/font.css' rel='stylesheet' />
    <style is:global>
      *::before,
      *::after {
        box-sizing: border-box;
      }

      * {
        box-sizing: border-box;
        min-width: 0;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Digital 7', monospace;
        font-weight: 400;
        font-size: 32px;

        background-color: transparent;
        color: black;

        margin: 0 auto;
        width: 100vw;
        min-height: 100vh;
        overflow: hidden;
        cursor: none !important;
      }

      :root {
        --rfebm-red: #cc0001;
        --vetusta-yellow: #fceb00;
        --vetusta-black: #151111;
      }
    </style>
    <slot name='head' />
  </head>
