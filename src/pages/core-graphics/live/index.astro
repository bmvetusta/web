---
import { AUTH_SECRET_TOKEN } from 'astro:env/server';
import CoreGraphics from 'src/layouts/CoreGraphics.astro';
import { ScoreboardTeam } from 'src/services/ably/scoreboard/constants';
import { authCoreGraphicsCookieName } from 'src/services/core-graphics/constants';
import Advertising from './Advertising.astro';
import LiveStopwatch from './LiveStopwatch.astro';
import { Score } from './react/_Score';

export const prerender = false;
// export const partial = true;

const isAuth = Astro.cookies.get(authCoreGraphicsCookieName)?.value === AUTH_SECRET_TOKEN;
if (!isAuth) {
  return Astro.redirect('/core-graphics/setup');
}
---

<CoreGraphics>
  <div id='time-container' class='stopwatch'>
    <LiveStopwatch />
  </div>

  <div id='local-scoreboard' class='scoreboard local'>
    <img
      src={'/assets/images/streamings/shields/vetusta.png'}
      width={128}
      height={128}
      alt='Escudo Balonmano Vetusta'
      loading='eager'
      class='shield'
    />
    <span class='result'>
      <Score team={ScoreboardTeam.HOME} client:only='react'>
        <span slot='fallback'>00</span>
      </Score>
    </span>
  </div>

  <div id='visitor-scoreboard' class='scoreboard visitor'>
    <img
      src={'/assets/images/streamings/shields/atletica.png'}
      width={128}
      height={128}
      alt='Escudo del equipo visitante'
      loading='eager'
      class='shield'
    />
    <span class='result'>
      <Score team={ScoreboardTeam.AWAY} client:only='react'> <span slot='fallback'>00</span></Score>
    </span>
  </div>

  <div id='advertising' class='advertising'>
    <Advertising />
  </div>

  <div id='info'></div>
  <div id='title'>
    <h3>TÃ­tulo</h3>
    <h4>Subtitulo</h4>
  </div>
</CoreGraphics>

<style>
  :root {
    --stopwatch-top: 100px;
    --scoreboard-team-top: calc(var(--stopwatch-top));
    --scoreboard-team-translate: 220px;
    --scoreboard-score-font-size: 64px;
    --time-font-size: 42px;
    --number-flow-mask-height: 1;
  }

  /* Default scene */
  body {
    background-color: #00ff00;
  }

  div#title {
    /* display: none; */
    position: absolute;
    transform: translateX(-50%);
    left: -100%;
    bottom: 30px;
    z-index: 9;
    transition: 1s;
    width: 100%;
    font-family: 'Alumni Sans', 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande',
      'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    width: 1200px;
    background-color: var(--vetusta-yellow);
    border-radius: 10px 10px;
    color: antiquewhite;
    overflow: hidden;
    text-indent: 1rem;

    h3 {
      font-size: 42px;
      background-color: black;
      padding: 10px 0px;
    }

    h4 {
      font-size: 38px;
      color: #444;
      padding: 10px 0px;
    }
  }

  .view {
    left: 50% !important;
    bottom: 30px !important;
  }

  div#info {
    display: none;
  }

  /* Advertising */
  div#advertising {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9;
  }

  /* Stopwatch */
  div#time-container {
    position: absolute;
    top: var(--stopwatch-top);
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 0;
  }

  /* Common */
  img.shield {
    z-index: 1;
    width: 128px;
    height: 128px;
    border-radius: 50%;
    border: 5px solid var(--vetusta-yellow);
  }

  /* Scoreboard */
  .scoreboard {
    position: absolute;
    transform: translate(-50%, -50%);
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }

  .scoreboard.visitor {
    flex-direction: row;
  }

  .scoreboard span.result {
    padding: 0;
    background-color: var(--vetusta-yellow);
    color: black;
    font-size: var(--scoreboard-score-font-size);
    position: relative;
    line-height: 0.6;
  }

  /* Local */
  .scoreboard.local {
    flex-direction: row-reverse;
    top: var(--scoreboard-team-top);
    left: calc(50% - var(--scoreboard-team-translate));
  }

  .scoreboard.local span.result {
    padding-right: 32px;
    padding-left: 16px;
    right: -20px;
    border-top-left-radius: 30%;
    border-bottom-left-radius: 30%;
  }

  /* Visitor */
  .scoreboard.visitor {
    top: var(--scoreboard-team-top);
    left: calc(50% + var(--scoreboard-team-translate));
  }

  .scoreboard.visitor span.result {
    padding-left: 32px;
    padding-right: 16px;
    left: -20px;
    border-top-right-radius: 30%;
    border-bottom-right-radius: 30%;
  }

  /* Timeout scene */
  :root[data-scene='timeout'] {
    & body {
      background-color: var(--vetusta-yellow);
    }
    & div.scoreboard {
      zoom: 2;
    }
    & div.scoreboard span.result {
      position: absolute;
      top: 100%;
      left: 45%;
      transform: translateX(-50%);
    }
    & div.stopwatch {
      zoom: 1.5;
    }
    & div#info {
      display: block;
      position: absolute;
      top: 400px;
      left: 50%;
      transform: translate(-50%, -50%);
      font-family: 'Alumni Sans', 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande',
        'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
      font-weight: 800;
      font-size: 64px;
      width: 500px;
      height: 200px;
      text-align: center;
      text-wrap: pretty;
    }
    & div#advertising {
      zoom: 1.5;
    }
  }
</style>
